<h1><%= @doctor.name%></h1>
<h3><%= @doctor.department %></h3>

<ol>
<% @doctor.appointments.each do |appt| %>
    <li><hr><%= link_to "#{appt.appointment_datetime.strftime("%B %d, %Y")} at #{appt.appointment_datetime.strftime("%H:%M")}, #{appt.patient.name}", patient_path(appt.patient) %><br></li><hr><br>
<% end %>
</ol>