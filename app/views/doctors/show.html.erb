<h1><%= @doctor.name %></h1>

<h2><%=@doctor.department%></h2>
<br>

<h2>Appointments</h2>
<ul>
<%= @doctor.appointments.each do |appointment| %>
    <li><h3>Appointment Time: <%= appointment.appointment_datetime.strftime("%B %d, %Y at %k:%M") %></h3></li>
    <li><h3><%= link_to appointment.patient.name, patient_path(appointment.patient) %></h3></li>
<% end %>
</ul>

