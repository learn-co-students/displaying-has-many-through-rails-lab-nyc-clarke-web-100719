<h1><%= @patient.name %></h1>
<h3>Age: <%= @patient.age %></h3><br>
<hr>

<h3>Appointments: </h3><br>
<% @patient.appointments.each do |appointment| %>
    <h4>Time: <%= appointment.appointment_datetime.strftime("%B %d, %Y at %k:%M") %></h4>
    <h4>Doctor: <%= link_to appointment.doctor.name, doctor_path(appointment.doctor) %></h4>

<% end %>